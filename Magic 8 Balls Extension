import random

def magic_8_ball():
    # List of possible answers
    responses = [
        "Yes.",
        "No.",
        "Ask again later.",
        "Cannot predict now.",
        "Don't count on it.",
        "My sources say no.",
        "Yes, definitely.",
        "Most likely.",
        "Outlook good.",
        "Very doubtful."
    ]
    
    # Prompt the user to ask a question
    question = input("Ask the Magic 8 Ball a question: ")

    # Randomly select a response from the list
    response = random.choice(responses)

    # Output the answer
    print("Magic 8 Ball says:", response)

# Call the magic_8_ball function
magic_8_ball()
